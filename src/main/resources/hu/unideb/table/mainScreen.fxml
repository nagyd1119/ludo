<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="hu.unideb.table.controller.MainController"
            prefWidth="800.0" prefHeight="600.0"
            style="-fx-background-color: linear-gradient(to bottom right, #ffecd2, #fcb69f);">

    <center>
        <VBox alignment="CENTER" spacing="30" BorderPane.alignment="CENTER">
            <Label text="ðŸŽ² Ludo"
                   style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #4b2e05;" />

            <HBox alignment="CENTER" spacing="10">
                <Label text="Number of Players:" style="-fx-font-size: 16px;"/>
                <ChoiceBox fx:id="playerCountChoice" prefWidth="120"/>
            </HBox>
            <StackPane prefHeight="150" prefWidth="400" maxHeight="150">
                <VBox fx:id="nameFieldsContainer"
                      alignment="TOP_CENTER"
                      spacing="10"
                      style="-fx-background-color: rgba(255,255,255,0.4); -fx-background-radius: 10; -fx-padding: 10;"/>
            </StackPane>
            <Button fx:id="startButton"
                    text="Start Game"
                    prefWidth="200"
                    style="-fx-font-size: 18px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 10;"
                    disable="true"
                    onAction="#handleStartClick"/>
        </VBox>
    </center>

