<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="hu.unideb.table.controller.TableController"
           style="-fx-background-color: linear-gradient(to bottom right, #f8f9fa, #e6ecf5);">

    <VBox alignment="CENTER" spacing="20" maxWidth="1000" maxHeight="1000">

    <HBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Button fx:id="rollButton"
                    text="ðŸŽ² Roll"
                    style="-fx-font-size: 18px; -fx-padding: 10px 20px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 10;"
                    onAction="#handleRollClick"/>
            <Label fx:id="statusLabel"
                   style="-fx-font-size: 20px; -fx-text-fill: #333333; -fx-font-weight: bold;"/>
        </HBox>

        <StackPane>
            <GridPane fx:id="gridPane"
                      prefWidth="900" prefHeight="900"
                      maxWidth="900" maxHeight="900">
                <effect>
                    <DropShadow radius="20" color="#00000055"/>
                </effect>
            </GridPane>
        </StackPane>
    </VBox>
</StackPane>
